<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/dialog_design">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/image"
                android:layout_width="245dp"
                android:layout_height="250dp"
                android:src="@drawable/selfie_tutorial"/>

            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pink_right_arrow"
                android:clickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:textSize="17sp"
                android:text="촬영을 시작합니다!"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="26.3dp"
                android:layout_width="127.8dp"
                android:layout_height="103.7dp"
                android:src="@drawable/camera"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="124dp"
                android:layout_height="38.8dp"
                android:text="OK"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="28.2dp"
                android:textColor="#ffffff"
                android:background="@drawable/buttondesign3"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>