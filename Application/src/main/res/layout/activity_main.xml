<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center|top"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:id="@+id/button_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:text="이름"
            android:textColor="#4b4b4b"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/button_down"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#707070"></LinearLayout>

    <LinearLayout
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="96.9dp"
            android:layout_height="85dp"
            android:src="@drawable/perfitlogo_new"
            android:layout_marginBottom="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피팅해 보고 싶은"
            android:textColor="#4b4b4b"
            android:textSize="15sp"/>

        <TextView
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옷의 종류를 선택하세요"
            android:textColor="#4b4b4b"
            android:layout_marginBottom="28dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#707070"
            android:layout_marginBottom="8.6dp"></LinearLayout>

   </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종류"
        android:textSize="17sp"
        android:layout_marginBottom="7dp"
        android:textColor="#4b4b4b"/>

    <LinearLayout
        android:gravity="center"
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/btn_shirt"
                android:clickable="true"
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttondesign5">
                
                <ImageView
                    android:layout_width="101.6dp"
                    android:layout_height="84dp"
                    android:src="@drawable/tshirt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="티셔츠/가디건/니트/남방"
                    android:textSize="11sp"
                    android:layout_marginTop="10.3dp"
                    android:textColor="#4b4b4b"/>
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_pants"
                android:clickable="true"
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/buttondesign5">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:layout_width="91.8dp"
                    android:layout_height="86.7dp"
                    android:src="@drawable/pants"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="바지/팬츠"
                    android:textSize="11sp"
                    android:layout_marginTop="10.3dp"
                    android:textColor="#4b4b4b"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <LinearLayout
                android:id="@+id/btn_dress"
                android:clickable="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="11.6dp"
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/buttondesign5">

                <ImageView
                    android:layout_width="130.6dp"
                    android:layout_height="79dp"
                    android:src="@drawable/dress"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원피스/드레스"
                    android:textSize="11sp"
                    android:layout_marginTop="10.3dp"
                    android:textColor="#4b4b4b"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_skirt"
                android:clickable="true"
                android:layout_marginTop="11.6dp"
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/buttondesign5">

                <ImageView
                    android:layout_width="92dp"
                    android:layout_height="79.7dp"
                    android:src="@drawable/skirt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="치마/스커트"
                    android:textSize="11sp"
                    android:layout_marginTop="10.3dp"
                    android:textColor="#4b4b4b"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>