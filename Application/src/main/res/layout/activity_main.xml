<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center|top"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:clickable="true"
        android:id="@+id/button_name">

        <TextView
            android:fontFamily="@font/nanumsquare"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:text="이름"
            android:textColor="#4b4b4b"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="6.5dp"
            android:src="@drawable/main_down_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#707070"></LinearLayout>

    <LinearLayout
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_width="232dp"
            android:layout_height="222dp"
            android:src="@drawable/main_illu1_fin" />

        <TextView
            android:fontFamily="@font/nanumsquare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피팅해 보고 싶은"
            android:textColor="#4b4b4b"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/nanumsquare"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옷의 종류를 선택하세요"
            android:textColor="#4b4b4b"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#707070"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="8.6dp"></LinearLayout>

   </LinearLayout>
    
    <TextView
        android:fontFamily="@font/nanumsquare"
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종류"
        android:textSize="17sp"
        android:layout_marginBottom="7dp"
        android:textColor="#4b4b4b"/>

    <RelativeLayout
        android:gravity="center"
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vp">
        </androidx.viewpager.widget.ViewPager>

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pink_dot"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_dot"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>