<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:gravity="center|top"
    android:orientation="vertical">

    <ImageView
        android:layout_width="83dp"
        android:layout_height="72dp"
        android:src="@drawable/perfitlogo_new"
        android:layout_marginTop="85dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="21dp"
        android:text="계정 만들기"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="#ff5f76"
        android:layout_marginTop="30dp"/>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_id"
            android:layout_marginTop="62.9dp"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:hint="ID"
            android:textColorHint="#ff5f76"
            />
        
        <Button
            android:id="@+id/btn_check"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/edt_id"
            android:layout_marginTop="68dp"
            android:background="@drawable/buttondesign4"
            android:layout_marginRight="15dp"
            android:text="중복확인"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            />
        
    </RelativeLayout>

    
    <EditText
        android:id="@+id/edt_pw"
        android:layout_marginTop="18dp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:hint="PW"
        android:textColorHint="#ff5f76"
        />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="203dp"
        android:layout_height="41.9dp"
        android:background="@drawable/buttondesign3"
        android:text="OK"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="59dp"/>

</LinearLayout>