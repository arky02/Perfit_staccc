<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/perfit_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ModelCreateActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/perfit_mainlogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="생성할 모델의"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름과 키를 입력하세요"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/name"
            android:layout_width="210dp"
            android:layout_height="44dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="8dp"
            android:background="#ffe3f0"
            android:hint="이름"
            android:inputType="textPersonName|textShortMessage"
            android:padding="10dp"
            android:textColorHint="#b32e6c" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/key"
                android:layout_width="210dp"
                android:layout_height="44dp"
                android:background="#ffe3f0"
                android:hint="키"
                android:inputType="number|textShortMessage"
                android:padding="10dp"
                android:textColorHint="#b32e6c" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/key"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:text="cm"
                android:textSize="18dp" />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/check"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttondesign_disabled"
        android:enabled="false"
        android:text="OK"
        android:textColor="#80000000"
        android:textSize="18dp" />


</LinearLayout>