<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModelCreateActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/perfit_background">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/perfit_mainlogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성할 모델의"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름과 키를 입력하세요"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_marginTop="45dp"
            android:layout_width="260dp"
            android:layout_height="53dp"
            android:id="@+id/name"
            android:hint="이름"
            android:background="#ffe3f0"
            android:padding="10dp"
            android:textColorHint="#b32e6c"
            android:layout_marginBottom="8dp"
            android:inputType="textPersonName|textShortMessage"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="260dp"
                android:layout_height="53dp"
                android:id="@+id/key"
                android:hint="키"
                android:background="#ffe3f0"
                android:padding="10dp"
                android:textColorHint="#b32e6c"
                android:inputType="number|textShortMessage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/key"
                android:layout_centerInParent="true"
                android:text="cm"
                android:layout_marginRight="15dp"
                android:textSize="18dp"
                />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:layout_marginTop="70dp"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="OK"
        android:textColor="#80000000"
        android:id="@+id/check"
        android:enabled="false"
        android:textSize="18dp"
        android:background="@drawable/buttondesign_disabled"/>


</LinearLayout>