<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".ModelCreateActivity">

    <ImageView
        android:layout_width="83dp"
        android:layout_height="72dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/perfitlogo_new" />

    <TextView
        android:layout_marginTop="29.8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="생성할 모델의"
        android:textColor="#ff5f76"
        android:textSize="19sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름과 키를 입력하세요"
        android:textColor="#ff5f76"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/name"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="8dp"
            android:hint="이름"
            android:textSize="14sp"
            android:inputType="textPersonName|textShortMessage"
            android:padding="10dp"
            android:textColorHint="#ff5f76" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/key"
                android:layout_width="240dp"
                android:layout_height="38dp"
                android:hint="키"
                android:inputType="number|textShortMessage"
                android:padding="10dp"
                android:textSize="14sp"
                android:textColorHint="#ff5f76" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/key"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:text="cm"
                android:textSize="14sp" />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/check"
        android:layout_width="203dp"
        android:layout_height="41dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttondesign3"
        android:enabled="false"
        android:text="OK"
        android:textColor="#80000000"
        android:textSize="18dp" />


</LinearLayout>