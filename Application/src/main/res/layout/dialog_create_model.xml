<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/image_x" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="생성할 모델의"
                android:textColor="#ff1783"
                android:textSize="16dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="이름과 키를 입력하세요"
                android:textColor="#ff1783"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="17dp"
                android:background="#ffe6f1"
                android:hint="이름"
                android:padding="10dp"
                android:textColorHint="#b83b75"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_height"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="9dp"
                    android:background="#ffe6f1"
                    android:hint="키"
                    android:padding="10dp"
                    android:textColorHint="#b83b75"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/edt_height"
                    android:layout_marginRight="15dp"
                    android:layout_centerInParent="true"
                    android:textSize="13sp"
                    android:text="cm"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttondesign2"
                android:text="OK"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>