<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera.CameraChooseActivity"
    android:orientation="vertical"
    android:gravity="center|top"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="85.9dp"
        android:layout_height="75.4dp"
        android:layout_marginTop="89dp"
        android:src="@drawable/logo_color"/>

    <TextView
        android:layout_marginTop="22.4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="촬영모드를"
        android:textSize="19sp"
        android:textColor="#292929"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택하세요"
        android:textSize="19sp"
        android:textColor="#292929"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="59.7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="114.4dp"
                android:layout_height="131.5dp"
                android:src="@drawable/selfie_mode"/>

            <Button
                android:layout_width="129dp"
                android:layout_height="37.4dp"
                android:textSize="13sp"
                android:text="내가 찍을께요"
                android:textColor="#FFFFFF"
                android:background="@drawable/buttondesign3"
                android:textStyle="bold"
                android:layout_marginTop="21.4dp"
                android:id="@+id/btn_pic_me"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="2dp"
            android:layout_height="190dp"
            android:background="#000000">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="75.4dp"
                android:layout_height="131.5dp"
                android:src="@drawable/other"
                android:layout_marginLeft="30dp"/>

            <Button
                android:layout_width="129dp"
                android:layout_height="37.4dp"
                android:textSize="13sp"
                android:text="다른 사람이 촬영"
                android:textColor="#FFFFFF"
                android:background="@drawable/buttondesign3"
                android:textStyle="bold"
                android:layout_marginTop="21.4dp"
                android:id="@+id/btn_pic_other"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>