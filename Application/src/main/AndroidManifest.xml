<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.Perfect_fit">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MaterialTheme">
        <activity android:name=".ModifyModelActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraChooseActivity"
            android:label="촬영 타입을 골라주세요">
        </activity>
        <activity android:name=".ImageShowActivity" />
        <activity android:name=".ModelCreateActivity" />
        <activity
            android:name=".HomeActivity"
            android:label="PerFit-home" />
        <activity android:name=".SplashActivity" />
        <activity
            android:name=".CameraActivity"
            android:label="@string/app_name" />
    </application>

</manifest>